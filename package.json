{
  "name": "star-wars",
  "version": "0.1.0",
  "description": "Single page application where users can view all people in the Star Wars universe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://gitlab.com/chin-phang/star-wars.git"
  },
  "scripts": {
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "ts-format": "prettier \"./src/**/*.{ts,tsx}\" --config ./prettier.config.js --write",
    "scss-format": "prettier \"./src/**/*.scss\" --config ./prettier-scss.config.js --write",
    "stylelint-fix": "stylelint \"./src/**/*.scss\" --config ./stylelint.config.js --fix",
    "test": "jest",
    "start": "webpack-dev-server --config=webpack.config.dev.js",
    "build-clean": "rimraf dist/*",
    "prebuild": "npm run build-clean",
    "build": "webpack --mode=production --config=webpack.config.prod.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "node_modules/.bin/prettier --config ./prettier.config.js --write",
      "git add"
    ],
    "src/**/*.scss": [
      "node_modules/.bin/prettier --config ./prettier-scss.config.js --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "font-awesome": "^4.7.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.5.0",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/webpack": "^4.4.17",
    "@types/webpack-dev-server": "^3.1.1",
    "autoprefixer": "^9.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.14.3",
    "prettier-stylelint": "^0.4.2",
    "resolve-url-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.3",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
