{
  "name": "star-wars",
  "version": "0.1.0",
  "description": "Single page application where users can view all people in the Star Wars universe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://gitlab.com/chin-phang/star-wars.git"
  },
  "scripts": {
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "js-format": "eslint \"./**/*.{js,jsx}\" --fix",
    "scss-format": "prettier \"./src/**/*.scss\" --config ./prettier-scss.config.js --write",
    "stylelint-fix": "stylelint \"./src/**/*.scss\" --config ./stylelint.config.js --fix",
    "test": "jest",
    "dev": "webpack-dev-server --config=webpack.config.dev.js",
    "build-clean": "rimraf dist/*",
    "prebuild": "npm run build-clean",
    "build": "webpack --config=webpack.config.prod.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "node_modules/.bin/eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "node_modules/.bin/prettier --config ./prettier-scss.config.js --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.7",
    "@fortawesome/free-solid-svg-icons": "^5.4.2",
    "@fortawesome/react-fontawesome": "^0.1.3",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "dotenv": "^6.1.0",
    "immutability-helper": "^2.8.1",
    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-paginate": "^5.2.4",
    "react-redux": "^5.1.0",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.5.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "css-loader": "^1.0.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "postcss-loader": "^3.0.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.14.3",
    "prettier-stylelint": "^0.4.2",
    "redux-devtools-extension": "^2.13.5",
    "resolve-url-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  }
}
