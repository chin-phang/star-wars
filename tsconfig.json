{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "src/ts-build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "src/*": ["src/*"],
      "@env": ["env.ts"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
